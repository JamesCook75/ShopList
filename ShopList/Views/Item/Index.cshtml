@model List<ShopList.Models.Item>
@{
    ViewData["Title"] = "Index";
}

<h2>Shopping List</h2>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Store</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td>@item.StoreID</td>
            @*<td><a asp-controller="Cheese" asp-action="Edit" asp-route-id="@item.ID">Edit Item</a></td>*@
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No items yet!</p>
}

<p><a asp-controller="Item" asp-action="Add">Add |</a><a asp-controller="Item" asp-action="Remove"> Remove</a></p>
