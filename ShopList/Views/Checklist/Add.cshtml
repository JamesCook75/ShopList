@model ShopList.ViewModels.AddChecklistViewModel

@{
    ViewBag.Title = "New Shopping List";
}

<h2>@ViewBag.Title</h2>

<form asp-controller="Checklist" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <input type="submit" value="Create List" />


</form>

