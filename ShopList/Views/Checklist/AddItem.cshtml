@model ShopList.ViewModels.AddChecklistItemViewModel

@{
    ViewBag.Title = "Add Item";
}

<h2>@ViewBag.Title</h2>

<form asp-controller="Checklist" asp-action="AddItem" method="post">

    <div class="form-group">
        <label asp-for="ItemID"></label>
        <select asp-for="ItemID" asp-items="Model.Items" ></select>
        <span asp-validation-for="ItemID"></span>
        <input type="hidden" name="ChecklistID" value="@Model.Checklist.ID"/>
    </div>

    <input type="submit" value="Add Item" />


</form>

